{
  "name": "octoturtle",
  "version": "0.0.1",
  "description": "Set up auditing rules for your Github repository",
  "main": "octoturtle.js",
  "engines" : { "node" : ">=5.0.0" },
  "scripts": {
    "all": "npm run lint && npm test && npm run docs",
    "test": "istanbul cover jasmine JASMINE_CONFIG_PATH=test/jasmine.json",
    "lint": "eslint .",
    "docs": "jsdoc octoturtle.js lib deploy README.md package.json -d docs --pedantic",
    "coveralls": "coveralls < ./coverage/lcov.info"
  },
  "repository": {
    "type": "git",
    "url": "https://www.gitub.com/AndrewGuenther/octoturtle.git"
  },
  "keywords": [
    "github",
    "auditing",
    "bot",
    "turtle"
  ],
  "author": "Andrew Guenther",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.15.0",
    "express": "^4.13.4",
    "express-x-hub": "^1.0.4",
    "request": "^2.69.0"
  },
  "devDependencies": {
    "coveralls": "^2.11.9",
    "eslint": "^2.3.0",
    "eslint-config-google": "^0.4.0",
    "istanbul": "^0.4.2",
    "jasmine": "^2.4.1",
    "jsdoc": "^3.4.0"
  },
  "eslintConfig": {
    "extends": "google"
  }
}
